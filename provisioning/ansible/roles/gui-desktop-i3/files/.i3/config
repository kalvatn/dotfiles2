#     statusline #ffffff
#   }
# }
bar {
  status_command i3blocks -c ~/.i3/i3blocks.conf
  workspace_buttons yes
  position bottom
  colors {
    background #000000
    statusline #ffffff
  }
}


assign [class="jetbrains-idea"] $workspace_1
assign [class="Firefox"] $workspace_8
assign [class="Google Play Music Desktop Player"] $workspace_0

